---
import { AppConfig } from '@/utils/AppConfig';

export interface Props {
  head: {
    title: string;
    description: string;
  };
}

const {
  head: { title, description },
} = Astro.props as Props;
---

<html lang='en' class='dark-mode'>
  <head>
    <meta charset='UTF-8' />
    <meta name='viewport' content='width=device-width, initial-scale=1.0' />
    <title>{title}</title>
    <meta name='description' content={description} />
    <meta name='author' content={AppConfig.author} />

    <link rel='alternate' type='application/rss+xml' href='/rss.xml' />
    <link rel='icon' type='image/x-icon' href='/favicon.ico' />

    <!-- Font -->
    <link rel='preconnect' href='https://fonts.googleapis.com' />
    <link rel='preconnect' href='https://fonts.gstatic.com' crossorigin />
    <link
      href='https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap'
      rel='stylesheet'
    />

    <!-- Font Awesome Icons -->
    <link
      rel='stylesheet'
      href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css'
    />
  </head>
  <body>
    <div class='min-h-screen antialiased'>
      <slot></slot>
    </div>

    <style is:global>
      /* Base styles */
      html {
        scroll-behavior: smooth;
        overflow-y: scroll;
        scrollbar-width: none; /* Firefox */
        -ms-overflow-style: none; /* IE and Edge */
      }

      /* Hide scrollbar for Chrome, Safari and Opera */
      html::-webkit-scrollbar {
        display: none;
      }

      body {
        font-family: 'Inter', sans-serif;
        overflow-x: hidden;
        transition: background-color 0.5s ease, color 0.5s ease;
      }

      /* Dark mode styles */
      html.dark-mode {
        --bg-color: #0f172a;
        --text-color: #f8fafc;
        --bg-secondary: #1e293b;
        --accent-color: #06b6d4;
      }

      /* Light mode styles */
      html.light-mode {
        --bg-color: #f8fafc;
        --text-color: #0f172a;
        --bg-secondary: #e2e8f0;
        --accent-color: #0891b2;
      }

      /* Apply theme colors dynamically */
      html.dark-mode body {
        background-color: var(--bg-color);
        color: var(--text-color);
      }

      html.light-mode body {
        background-color: var(--bg-color);
        color: var(--text-color);
      }

      /* Update all component backgrounds with smooth transitions */
      .bg-neutral-900,
      .bg-neutral-800\/50,
      .border-neutral-700\/50,
      .text-gray-300,
      .text-neutral-300,
      .text-neutral-400,
      .text-white,
      .card-light,
      button,
      a,
      input,
      textarea,
      .navbar-light,
      .tags-light-mode span {
        transition: all 0.5s ease;
      }

      /* Update all component backgrounds */
      html.light-mode .bg-neutral-900 {
        background-color: var(--bg-color) !important;
      }

      html.light-mode .bg-neutral-800\/50 {
        background-color: rgba(226, 232, 240, 0.5) !important;
      }

      html.light-mode .border-neutral-700\/50 {
        border-color: rgba(203, 213, 225, 0.5) !important;
      }

      html.dark-mode .text-gray-300,
      html.dark-mode .text-neutral-300,
      html.dark-mode .text-neutral-400 {
        color: #d1d5db !important;
      }

      html.light-mode .text-gray-300,
      html.light-mode .text-neutral-300,
      html.light-mode .text-neutral-400 {
        color: #475569 !important;
      }

      html.dark-mode .text-white {
        color: #f8fafc !important;
      }

      html.light-mode .text-white {
        color: var(--text-color) !important;
      }

      /* Navbar specific light mode styles */
      html.light-mode .navbar-light {
        background-color: rgba(248, 250, 252, 0.95) !important;
        border-color: #e2e8f0 !important;
      }

      html.light-mode .navbar-light .border-neutral-700\/50 {
        border-color: rgba(203, 213, 225, 0.5) !important;
      }

      /* Card styles for light mode */
      html.light-mode .card-light {
        background-color: white !important;
        border-color: #e2e8f0 !important;
      }

      html.light-mode .card-hover:hover {
        background-color: #f1f5f9 !important;
        border-color: #cbd5e1 !important;
      }

      /* Tag styles for light mode */
      html.light-mode .tags-light-mode span {
        background-color: rgba(240, 253, 250, 0.8) !important;
        border-color: rgba(20, 184, 166, 0.2) !important;
        color: #0d9488 !important;
      }

      html.light-mode .tags-light-mode span[class*='bg-fuchsia'] {
        background-color: rgba(253, 244, 255, 0.8) !important;
        border-color: rgba(217, 70, 239, 0.2) !important;
        color: #a21caf !important;
      }

      html.light-mode .tags-light-mode span[class*='bg-lime'] {
        background-color: rgba(247, 254, 231, 0.8) !important;
        border-color: rgba(132, 204, 22, 0.2) !important;
        color: #65a30d !important;
      }

      html.light-mode .tags-light-mode span[class*='bg-sky'] {
        background-color: rgba(240, 249, 255, 0.8) !important;
        border-color: rgba(14, 165, 233, 0.2) !important;
        color: #0284c7 !important;
      }

      html.light-mode .tags-light-mode span[class*='bg-rose'] {
        background-color: rgba(255, 241, 242, 0.8) !important;
        border-color: rgba(244, 63, 94, 0.2) !important;
        color: #e11d48 !important;
      }

      html.light-mode .tags-light-mode span[class*='bg-violet'] {
        background-color: rgba(245, 243, 255, 0.8) !important;
        border-color: rgba(139, 92, 246, 0.2) !important;
        color: #7c3aed !important;
      }

      html.light-mode .tags-light-mode span[class*='bg-emerald'] {
        background-color: rgba(236, 253, 245, 0.8) !important;
        border-color: rgba(16, 185, 129, 0.2) !important;
        color: #059669 !important;
      }

      html.light-mode .tags-light-mode span[class*='bg-yellow'] {
        background-color: rgba(254, 252, 232, 0.8) !important;
        border-color: rgba(234, 179, 8, 0.2) !important;
        color: #ca8a04 !important;
      }

      html.light-mode .tags-light-mode span[class*='bg-indigo'] {
        background-color: rgba(238, 242, 255, 0.8) !important;
        border-color: rgba(99, 102, 241, 0.2) !important;
        color: #4f46e5 !important;
      }

      html.light-mode .tags-light-mode span[class*='bg-blue'] {
        background-color: rgba(239, 246, 255, 0.8) !important;
        border-color: rgba(59, 130, 246, 0.2) !important;
        color: #2563eb !important;
      }

      html.light-mode .tags-light-mode span[class*='bg-red'] {
        background-color: rgba(254, 242, 242, 0.8) !important;
        border-color: rgba(239, 68, 68, 0.2) !important;
        color: #dc2626 !important;
      }

      html.light-mode .tags-light-mode span[class*='bg-green'] {
        background-color: rgba(240, 253, 244, 0.8) !important;
        border-color: rgba(34, 197, 94, 0.2) !important;
        color: #16a34a !important;
      }

      html.light-mode .tags-light-mode span[class*='bg-purple'] {
        background-color: rgba(250, 245, 255, 0.8) !important;
        border-color: rgba(168, 85, 247, 0.2) !important;
        color: #9333ea !important;
      }

      html.light-mode .tags-light-mode span[class*='bg-orange'] {
        background-color: rgba(255, 247, 237, 0.8) !important;
        border-color: rgba(249, 115, 22, 0.2) !important;
        color: #ea580c !important;
      }

      html.light-mode .tags-light-mode span[class*='bg-gray'] {
        background-color: rgba(248, 250, 252, 0.8) !important;
        border-color: rgba(100, 116, 139, 0.2) !important;
        color: #475569 !important;
      }

      /* Contact Modal Light Mode Styles */
      html.light-mode .contact-modal {
        background-color: white !important;
        border-color: #e2e8f0 !important;
      }

      html.light-mode .contact-modal h2 {
        color: #1e293b !important;
      }

      html.light-mode .contact-modal label {
        color: #475569 !important;
      }

      html.light-mode .contact-modal input,
      html.light-mode .contact-modal textarea {
        background-color: #f1f5f9 !important;
        border-color: #e2e8f0 !important;
        color: #1e293b !important;
      }

      html.light-mode .contact-modal input::placeholder,
      html.light-mode .contact-modal textarea::placeholder {
        color: #94a3b8 !important;
      }

      html.light-mode .contact-modal .cancel-btn {
        background-color: #f1f5f9 !important;
        border-color: #e2e8f0 !important;
        color: #475569 !important;
      }

      html.light-mode .contact-modal .cancel-btn:hover {
        background-color: #e2e8f0 !important;
      }

      /* Transitions for all interactive elements */
      a,
      button,
      input,
      textarea,
      .transition-all {
        transition: all 0.3s ease-in-out;
      }

      /* Section scroll behavior - enables full-height sections */
      .min-h-screen {
        min-height: 100vh;
        position: relative;
      }

      /* Animations */
      @keyframes fadeIn {
        from {
          opacity: 0;
          transform: translateY(10px);
        }
        to {
          opacity: 1;
          transform: translateY(0);
        }
      }

      .animate-fadeIn {
        animation: fadeIn 0.3s ease-out;
      }

      @keyframes bounce {
        0%,
        100% {
          transform: translateY(0);
        }
        50% {
          transform: translateY(-10px);
        }
      }

      .animate-fade-in {
        animation: fadeIn 0.5s ease-out forwards;
      }

      .animate-bounce {
        animation: bounce 2s infinite;
      }

      /* Additional utility classes */
      .shadow-glow {
        box-shadow: 0 0 15px rgba(6, 182, 212, 0.3);
      }

      .backdrop-blur {
        backdrop-filter: blur(8px);
      }
    </style>

    <script>
      // Simplified theme management to avoid jank
      document.addEventListener('DOMContentLoaded', () => {
        // Check for saved theme preference or use default (dark)
        const savedTheme = localStorage.getItem('theme') || 'dark';
        document.documentElement.className = savedTheme + '-mode';
      });
    </script>
  </body>
</html>
